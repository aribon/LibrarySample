<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@animator/lift_on_touch"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

        <TextView
                android:id="@+id/tvCategoryItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Category"
                tools:textSize="20sp"
                tools:textAllCaps="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvCategoryItemBooksAvailable"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tvCategoryItemBooksAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="999 books available"
                tools:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tvCategoryItemTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>