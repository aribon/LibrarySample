<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:stateListAnimator="@animator/lift_on_touch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="8dp"
      android:paddingEnd="8dp"
      android:paddingStart="8dp"
      android:paddingTop="8dp"
      >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivBookItemImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Space
        android:id="@+id/spaceBookItemImage"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBookItemImage"
        app:layout_constraintBottom_toTopOf="@+id/tvBookItemTitle"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvBookItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#333333"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeMaxTextSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/ivBookItemImage"
        app:layout_constraintStart_toStartOf="@+id/ivBookItemImage"
        app:layout_constraintTop_toBottomOf="@+id/spaceBookItemImage"
        app:layout_constraintBottom_toTopOf="@id/tvBookItemAuthor"
        app:layout_constraintVertical_bias="0"
        tools:text="Book Title"
        />

    <TextView
        android:id="@+id/tvBookItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#555555"
        android:fontFamily="sans-serif-condensed-medium"
        android:maxLines="1"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeMaxTextSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tvCategoryItemBooksAvailable"
        app:layout_constraintEnd_toEndOf="@+id/ivBookItemImage"
        app:layout_constraintStart_toStartOf="@+id/ivBookItemImage"
        app:layout_constraintTop_toBottomOf="@+id/tvBookItemTitle"
        app:layout_constraintVertical_bias="0"
        tools:text="Author"
        />

    <TextView
        android:id="@+id/tvBookItemPublisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#BBBBBB"
        android:fontFamily="sans-serif-condensed-medium"
        android:maxLines="1"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeMaxTextSize="10sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tvBookItemPrice"
        app:layout_constraintEnd_toEndOf="@+id/ivBookItemImage"
        app:layout_constraintStart_toStartOf="@+id/ivBookItemImage"
        app:layout_constraintTop_toBottomOf="@+id/tvBookItemAuthor"
        app:layout_constraintVertical_bias="0"
        tools:text="Publisher"
        />

    <Space
        android:id="@+id/spaceBookItemButton"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBookItemPublisher"
        app:layout_constraintBottom_toTopOf="@+id/tvBookItemPrice"
        />

    <TextView
        android:id="@+id/tvBookItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeMaxTextSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivBookItemImage"
        app:layout_constraintStart_toStartOf="@+id/ivBookItemImage"
        app:layout_constraintTop_toBottomOf="@+id/spaceBookItemButton"
        app:layout_constraintVertical_bias="1"
        android:background="@color/colorAccent"
        tools:text="50,00 Eur"
        />

  </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>